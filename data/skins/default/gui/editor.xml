<node id="editor"
       controller="editor"
       absolute="true"
       y="0px"
       x="0px"
       height="100%"
       width="100%"
       forward="canvas.layer=layer, canvas.frame=frame, canvas.document=doc, canvas.timeline=timeline"
       visible="false"
       draggable="false">
  <image controller="draggable" visible="true" id="container" slice="1 1" src="%skin/editor.png" absolute="true">
    <canvas id="canvas" inputEnabled="false"/>
  </image>
  <image id="tooloverlay" src="new:1x1:a{0}" position="absolute" width="100%" height="100%"/>
</node>
