<image
    controller="button, tabtarget"
    forward="iconimage.src=icon, iconimage.multiply=icon-multiply"
    padding="3 2 3 4"
    up-src="%skin/button-up.png"
    down-src="%skin/button-down.png"
    hover-multiply="#DDDDDD"
    focus-multiply="#DDAAAA"
    down-multiply="#AAAAAA">
  <image id="iconimage"/>
</image>
